        <div class="row">
            <div class="col-md-12">
                <% for(var i=0; i<books.length;i++){%>
                    <h3>
                        <%=books[i].title%>
                    </h3>
                    <h4>
                        <%=books[i].author%>
                    </h4>
                    <a href="books/<%=books[i]._id%>" class="text-muted">Read More</a>

            </div>
        </div>
        <hr>
        <%}%>
    </div>
</body>

</html>